{% extends "base.html.twig" %}
{% block body %}
	<div class="container">
		<h1>Mes Squads</h1>
		<div class="row">
			{% for squad in squad %}
				<div class="col">
					<div class="row">
						{{squad.name}}
					</div>
					<div class="row">
						{{squad.id}}
					</div>
				</div>
			{% endfor %}
		</div>
		<button class="contrast" data-target="modal-squad" onclick="toggleModal(event)">
			Nouvelle Squad
		</button>
	</div>


	<!-- Modal -->
	<dialog id="modal-squad">
		<article>
			<a href="#close" aria-label="Close" class="close" data-target="modal-squad" onclick="toggleModal(event)"></a>
			<h3>Cr√©er une nouvelle Squad</h3>
			<p></p>
			<footer>
				<a href="#cancel" role="button" class="secondary" data-target="modal-squad" onclick="toggleModal(event)">
					Annuler
				</a>

			</footer>
		</p>
	</article>
</dialog>{% endblock %}
